# frozen_string_literal: true

$LOAD_PATH.unshift(File.expand_path('lib', __dir__))

file 'lib/cucumber/ci_environment/CiEnvironments.json' => '../CiEnvironments.json' do |t|
  FileUtils.cp(t.prerequisites[0], t.name)
end

desc 'Copy the sample Environments & Run the unit tests for all environment types'
task spec: 'lib/cucumber/ci_environment/CiEnvironments.json' do
  system('bundle exec rspec')
end
task default: [:spec]
